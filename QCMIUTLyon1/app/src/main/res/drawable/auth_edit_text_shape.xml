<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/colorPressedButton" />
            <gradient android:angle="-90" android:startColor="@color/colorEditTextBackground" android:endColor="@color/colorEditTextBackground"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/colorIUT" />
            <solid android:color="@color/colorEditTextBackground"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
        <corners android:radius="5dip" />
        <stroke android:width="2dip" android:color="@color/colorEditTextBackground" />
        <gradient android:angle="-90" android:startColor="@color/colorEditTextBackground" android:endColor="@color/colorEditTextBackground" />
        </shape>
    </item>
</selector>