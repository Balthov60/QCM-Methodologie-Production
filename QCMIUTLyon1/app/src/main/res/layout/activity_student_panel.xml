<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/teacher_panel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView style="@style/BigButton"
            android:id="@+id/student_panel_mcq_to_do"
            android:gravity="bottom|center"

            android:text="@string/student_panel_mcq_to_do"
            android:background="@drawable/student_mcq_to_do"
            android:onClick="onClickTodo" />


        <TextView style="@style/BigButton"
            android:id="@+id/student_panel_mcq_done"
            android:layout_marginTop="40dp"
            android:gravity="bottom|center"

            android:text="@string/student_panel_mcq_done"
            android:background="@drawable/student_mcq_done"
            android:onClick="onClickMCQDone" />

    </LinearLayout>


</LinearLayout>