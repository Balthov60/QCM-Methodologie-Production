<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.iutmindfuck.qcmiutlyon1.activity.MarkTeacherActivity"
    tools:showIn="@layout/activity_mark_teacher">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        android:id="@+id/mark_teacher_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mark_sorting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"

            android:text="@string/mark_sorting_text"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/mark_sorting_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/mark_sorting_text"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:id="@+id/default_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="70dp">

            <ListView
                android:id="@+id/mark_teacher_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>