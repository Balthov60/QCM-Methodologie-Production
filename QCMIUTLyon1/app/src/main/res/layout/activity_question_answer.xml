<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/question_answer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Question title -->

            <TextView style="@style/WideFormView"
                android:id="@+id/question_answer_title"

                android:layout_centerInPare

                android:labelFor="@+id/question_answer_title_input"/>

            <ImageView style="@style/separator"
                android:layout_below="@+id/question_answer_title"
                android:contentDescription="@string/separator" />

            <!-- Answer list -->

            <LinearLayout
                android:id="@+id/question_answer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/question_answer_title"
                android:orientation="vertical"

                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp">


            </LinearLayout>

            <ImageView style="@style/PreviousNextButton"
                android:id="@+id/previous_button"

                android:layout_below="@id/question_answer_container"
                android:layout_marginTop="@dimen/basic_button_margin"

                android:background="@mipmap/previous_question"
                android:onClick="previousQuestion"/>

            <ImageView
                android:id="@+id/next_button"
                style="@style/PreviousNextButton"

                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/next_question"
                android:onClick="nextQuestion" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>